# Production Environment Variables for Zidio Job Platform

# API Configuration
REACT_APP_API_URL=https://api.zidio.com/api
REACT_APP_SOCKET_URL=https://api.zidio.com

# Application Configuration
REACT_APP_NAME=Zidio Job Platform
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_CHAT=true

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Pagination Configuration
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PAGE_SIZE=100

# Production settings
GENERATE_SOURCEMAP=false
REACT_APP_BUILD_MODE=production